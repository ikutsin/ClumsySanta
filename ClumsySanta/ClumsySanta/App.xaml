<Application
    x:Class="ClumsySanta.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:ClumsySanta.Controls">

    <!--Application Resources-->
    <Application.Resources>
        <!-- <local:LocalizedStrings xmlns:local="clr-namespace:ClumsySanta" x:Key="LocalizedStrings"/> -->


        <Style TargetType="TextBlock" x:Key="CustomFont">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <!--<Setter Property="FontFamily" Value=".\Assets\Ming in Bling.ttf#Ming in Bling" />-->
        </Style>
        <Style TargetType="TextBlock" x:Key="BigText" BasedOn="{StaticResource CustomFont}">
            <Setter Property="FontSize" Value="50" />
        </Style>
        <Style TargetType="TextBlock" x:Key="ChooseLevelText" BasedOn="{StaticResource BigText}">
            <Setter Property="Foreground" Value="#ffffff" />
        </Style>
        <Style TargetType="TextBlock" x:Key="IngameText" BasedOn="{StaticResource CustomFont}">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontWeight" Value="Black" />
        </Style>
        <Style x:Key="MyButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBackground"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="#e0B10303"
                                CornerRadius="20">
                            <ContentPresenter x:Name="ContentContainer"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <FontFamily x:Key="PhoneFontFamilyNormal">Comic Sans MS</FontFamily>
        <system:Double x:Key="PhoneFontSizeNormal">16</system:Double>
        <SolidColorBrush x:Key="PhoneForegroundBrush" Color="Black"/>

        <Style TargetType="controls:CollectionFlow">
	        <Setter Property="Template">
		        <Setter.Value>
			        <ControlTemplate TargetType="controls:CollectionFlow">
				        <Border Background="{TemplateBinding Background}"
				                BorderBrush="{TemplateBinding BorderBrush}"
				                BorderThickness="{TemplateBinding BorderThickness}">
					        <ItemsPresenter x:Name="ItemsPresenter"/>
				        </Border>
			        </ControlTemplate>
		        </Setter.Value>
	        </Setter>
	        <Setter Property="ItemsPanel">
		        <Setter.Value>
			        <ItemsPanelTemplate>
				        <controls:CollectionFlowPanel/>
			        </ItemsPanelTemplate>
		        </Setter.Value>
	        </Setter>
	        <Setter Property="ItemTemplate">
		        <Setter.Value>
			        <DataTemplate>
				        <Border BorderBrush="Black" BorderThickness="1" Background="White">
					        <TextBlock Text="{Binding Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
				        </Border>
			        </DataTemplate>
		        </Setter.Value>
	        </Setter>
        </Style>
	</Application.Resources>



</Application>