<UserControl x:Class="ClumsySanta.PresentsCounter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
             x:Name="Control" IsHitTestVisible="False"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Canvas x:Name="LayoutRoot">
        <Image Source="{Binding ElementName=Control, Path=PresentIcon}"
               Width="50" Height="50"/>
        <TextBlock VerticalAlignment="Center" Canvas.Left="60"
                Style="{StaticResource IngameText}"
                HorizontalAlignment="Center" Text="{Binding ElementName=Control, Path=PresentCount}" />
    </Canvas>
</UserControl>