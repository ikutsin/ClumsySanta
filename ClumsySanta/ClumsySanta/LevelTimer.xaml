<UserControl x:Class="ClumsySanta.LevelTimer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    d:DesignHeight="480" d:DesignWidth="480" x:Name="LevelTimerControl">
    <Canvas x:Name="TimerCanvas" Unloaded="TimerCanvas_Unloaded">
        <Canvas.Resources>
            <Storyboard x:Key="AnimationStoryOld" Storyboard.TargetName="TicksLeftTextOld" Completed="AnimationStoryOld_Completed">
                <DoubleAnimation Duration="00:00:1" From="0" To="-20" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Duration="00:00:1" From="1" To="0" Storyboard.TargetProperty="Opacity">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="AnimationStoryNew" Storyboard.TargetName="TicksLeftTextNew" Completed="AnimationStoryNew_Completed">
                <DoubleAnimation Duration="00:00:1" From="20" To="0" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Duration="00:00:1" From="0" To="1" Storyboard.TargetProperty="Opacity">
                    <DoubleAnimation.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </Canvas.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="{Binding ElementName=LevelTimerControl, Path=Icon}" Width="50" Height="50" />
            <TextBlock Opacity="0" Grid.Column="1" x:Name="TicksLeftTextNew" 
                       Style="{StaticResource IngameText}" Text="{Binding ElementName=LevelTimerControl, Path=TicksLeftNew}" d:DesignHeight="20" d:DesignWidth="20">
                <TextBlock.RenderTransform>
                    <TranslateTransform />
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="1" x:Name="TicksLeftTextOld" 
                       Style="{StaticResource IngameText}" Text="{Binding ElementName=LevelTimerControl, Path=TicksLeft}" d:DesignHeight="20" d:DesignWidth="20">
                <TextBlock.RenderTransform>
                    <TranslateTransform />
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
    </Canvas>
</UserControl>